generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           String    @id @default(uuid())
  cpf          String    @unique
  nome         String
  email        String    @unique
  telefone     String?
  senha        String
  perfil       Perfil    @default(USUARIO)
  criadoEm     DateTime  @default(now())
  atualizadoEm DateTime  @updatedAt
  deletadoEm   DateTime?
  ultimoLogin  DateTime?

  @@map("usuarios")
}

enum Perfil {
  USUARIO
  ADMINISTRADOR
  DESENVOLVEDOR
}
